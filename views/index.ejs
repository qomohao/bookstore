<!doctype html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%= title %></title>
    <link rel="stylesheet" href="./lib/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="./css/index.css">
</head>
<body>
<div class="wrap-all">
    <!--头部导航开始-->
    <%- include nav.ejs %>
    <!--头部导航结束-->
    <!--轮播图开始-->
    <div class="bs-lunbo">
        <div class="container">
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="./images/banner.jpg" alt="...">
                    </div>
                    <div class="item">
                        <img src="./images/banner.jpg" alt="...">
                    </div>
                </div>

                <!-- Controls -->

                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-xs-9">
                <div class="bs-main">
                    <!--推荐好书-->
                    <div class="product-rec content-full">
                        <div class="product-rec-header content-full">
                            <h3 class="pull-left">推荐好书</h3>
                            <div class="pull-right">
                                <a href="/recommend">查看往期推荐 》</a>
                            </div>
                        </div>
                        <div class="product-rec-content content-full">
                            <ul class="product-rec-group list-unstyled row content-full">
                                <% for(var i = 0;i < recommend.length;i++){ %>
                                <li class="product-rec-item col-xs-6">
                                    <div class="media">
                                        <div class="media-left">
                                            <a href="#">
                                                <img class="media-object" src="./images/65465465.jpg" alt="...">
                                            </a>
                                        </div>
                                        <div class="media-body">
                                            <h4 class="media-heading"><%= recommend[i].name %></h4>
                                            <p class="media-author"><%= recommend[i].author_id.name %></p>
                                            <p class="media-contnet"><%= recommend[i].content %></p>
                                            <div class="media-footer">
                                                <button class="btn btn-danger">立即购买</button>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                    <!--广告-->
                    <div class="product-banner">
                        <img src="./images/56465465.jpg" alt="">
                    </div>
                    <!--最新上架-->
                    <div class="product-newest content-full">
                        <div class="product-newest-header content-full">
                            <h3 class="pull-left">最新上架</h3>
                            <div class="pull-right">
                                <a href="/newest">更多上架书籍 》</a>
                            </div>
                        </div>
                        <div class="product-newest-content content-full">
                            <ul class="product-newest-group list-unstyled row content-full">
                                <% for(var i = 0;i < newest.length;i++){ %>
                                <li class="product-newest-item col-xs-2">
                                    <div class="thumbnail">
                                        <img src="./images/65465465.jpg" alt="...">
                                        <div class="caption">
                                            <h4 class="thumbnail-name"><%= newest[i].name %></h4>
                                            <span class="thumbnail-autor"><%= newest[i].author_id.name %></span>
                                            <span class="thumbnail-price"><%= newest[i].price %></span>
                                        </div>
                                    </div>
                                </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--右侧边栏切换卡-->
            <div class="col-xs-3">
                <%- include asideRank.ejs %>
            </div>
        </div>
    </div>
    <div class="push-footer"></div>
</div>
<!--底部-->
<%- include bottom.ejs %>

<script src="/lib/jquery/jquery.min.js"></script>
<script src="/lib/bootstrap/js/bootstrap.min.js"></script>
<script src="/lib/layer/layer.js"></script>
<script src="/js/nav.js"></script>

<script src="/js/index.js"></script>
</body>
</html>