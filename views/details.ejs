<script>


        function count(val){

            var count=parseInt($("#count").val());
            if(val=="jia"){
                count+=1;
                $("#count").val(count);
            }else{
                if(count>1){
                    count-=1;
                    $("#count").val(count);
                }else{
                    count=1;
                    $("#count").val(count);
                }

            }
        }


</script>

