<!doctype html>
<html lang="zh-cn">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=title%></title>
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/lgre.css">
</head>
<body>

<div class="bs-login">
    <div class="login-header">
        <img src="/images/loginlogo.png" alt="">
    </div>
    <div class="login-con">
        <div class="login-con-header content-full">
            <h3 class="pull-left">登录</h3>
            <p class="pull-right">还没账号，<a href="/user/register">去注册</a></p>
        </div>
        <div class="row">
            <div class="login-con-left col-xs-6">
                <form action="/user/login" method="post" onsubmit="return mysubmit()">
                    <div class="form-group">
                        <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" name="email">
                        <div id="myemail" style="color: red;text-align: right;"></div>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
                        <div id="mypassword" style="color: red;text-align: right;"></div>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"  name="remember" value="1"> 记住密码
                        </label>
                    </div>
                    <button type="submit" class="btn btn-danger btn-block">登录</button>
                </form>
            </div>
            <div class="login-con-right col-xs-6">
                <img src="/images/lietu.jpg" alt="">
            </div>
        </div>

    </div>
    <div class="login-footer">
        <p>ccsdcscscscscsccscscscsc</p>
    </div>
</div>


<script src="/lib/jquery/jquery.min.js"></script>
<script src="/lib/bootstrap/js/bootstrap.min.js"></script>
<script src="/lib/layer/layer.js"></script>
<script>

    var error = "<%= locals.error %>";
    var success = "<%= locals.success %>";

    if(error){
        layer.msg(error);
    }
    if(success){
        layer.msg(success);
    }

    function mysubmit(){
        var email=$("#exampleInputEmail1").val();
        var password=$("#exampleInputPassword1").val();
        var ifsubmit=true;
        if(email==""){
            $("#myemail").html("请输入邮箱！");
            ifsubmit=false;
        }else{
            $("#myemail").html("");
        }
        if(password==""){
            $("#mypassword").html("请输入密码！");
            ifsubmit=false;
        }else{
            $("#mypassword").html("");
        }
        return ifsubmit;
    }

</script>

</body>
</html>
